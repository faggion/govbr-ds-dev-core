mixin message(className="is-info")
  .br-message(class=className)
    .icon
      if className == "is-danger"
        i.fas.fa-times-circle.fa-2x
        span.sr-only Erro!
      if className == "is-success"
        i.fas.fa-check-circle.fa-2x
        span.sr-only Sucesso!
      if className == "is-warning"
        i.fas.fa-exclamation-triangle.fa-2x
        span.sr-only Atenção!
      if className == "is-info"
        i.fas.fa-info-circle.fa-2x
        span.sr-only Informação!
    .content
      if block
        block
    unless className == "hint"
      .close
        button.br-button.circle(type='button')
          i.fas.fa-times
          span.sr-only Fechar

mixin feedback(icon, message)
  .feedback(class=attributes.class)
    i.fas(class=icon)
    |
    |
    span=message
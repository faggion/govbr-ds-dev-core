mixin message
  - let componentClass = prefix + 'message'
  div(class=componentClass)&attributes(attributes)
    if attributes.danger
      .icon
        i.fas.fa-times-circle.fa-lg
        span.sr-only Erro!
    if attributes.success
      .icon
        i.fas.fa-check-circle.fa-lg
        span.sr-only Sucesso!
    if attributes.warning
      .icon
        i.fas.fa-exclamation-triangle.fa-lg
        span.sr-only Atenção!
    if attributes.info
      .icon
        i.fas.fa-info-circle.fa-lg
        span.sr-only Informação!
    .content
      if block
        block
    .close
      +button()(circle mini)
        i.fas.fa-times
        span.sr-only Fechar
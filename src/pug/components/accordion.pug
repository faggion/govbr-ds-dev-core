mixin accordion
  - let className = attributes.class
  - let componentClass = prefix + "accordion"
  - className = className ? componentClass + " " + className : componentClass
  div(class=className
      negative=attributes.negative
      single=attributes.single)
    if block
      block

mixin accordion-item(title="Título", className)
  .item(class=className ? className : ""
        active=attributes.active)
    button.header(type="button")
      span.icon
        if className
          i.fas.fa-angle-up
        else
          i.fas.fa-angle-down
      span.title=title
  .content
    if block
      block
    else
      | Conteúdo

mixin accordeon
  .br-accordeon
    if block
      block

mixin accordeon-item(title="Título", className)
  .item(class=className ? className : "")
    button.header(type="button")
      span.icon
        if className
          i.fas.fa-minus
        else
          i.fas.fa-plus
      span.title=title
  .content
    if block
      block
    else
      | Conteúdo


mixin table(datatable=false, title='Título da Tabela', checkbox=false, collapse=false, columns=4, rows=10)
  - let datatableClass = attributes.datatable ? "is-datatable" : ""
  - datatableClass = attributes.checkbox ? datatableClass  + " is-checkbox" : datatableClass
  - datatableClass = attributes.collapse ? datatableClass  + " is-collapsible" : datatableClass
  - let column = 1
  - let row = 1
  .br-table(
    class=attributes.class ? attributes.class + " " + datatableClass : datatableClass
    id=attributes.id
    )
    if (attributes.datatable)
      .header
        .top-bar
          .title=attributes.title ? attributes.title : title
          .grid-button
            +button()(circle).grid-small-trigger
              i.fas.fa-th
          .grid-button
            +button()(circle).grid-large-trigger
              i.fas.fa-th-large
          .divisor
          .search-button
            +button()(circle).search-trigger
              i.fas.fa-search
        .search-bar
          +input("Buscar").search-input.is-medium.has-icon(
            placeholder="Buscar na tabela",
            id=attributes.id + '-search-input'
          )
            button.icon(type='button')
              span.sr-only Buscar
              i.fas.fa-search
          +button()(circle).search-close.ml-1
            i.fas.fa-times
        if (attributes.checkbox)
          .selected-bar
            .info
              +button()(primary).mobile.select-all
                i.fas.fa-minus-square
              span.count 0
              span.text item selecionado
            .action-button
              +button()(primary).delete-trigger
                span Excluir
                i.fas.fa-trash-alt
            .action-button
              +button()(primary).download-trigger
                span Download
                i.fas.fa-download
            .action-button.mobile
              +button()(primary)
                i.fas.fa-ellipsis-v
    .responsive
      table
        thead
          tr
            if (attributes.checkbox)
              th(scope="col" style="width: 54px;")
                +checkbox("")(id=`${attributes.id}-check-all`, name="check")
            - column = 1
            while (column <= (attributes.columns ? attributes.columns : columns))
              th(scope="col")=`Coluna ${column}`
              - column++
        tbody
          while (row <= (attributes.rows ? attributes.rows : rows))
            tr
              if (attributes.checkbox)
                td
                  +checkbox("")(id=`${attributes.id}-line-${row}` name="check")
              - column = 1
              while (column <= (attributes.columns ? attributes.columns : columns))
                - let random = Math.random().toString(36).substring(2, 15) + Math.random().toString(36).substring(2, 15)
                - random = random.replace(/(\w{8})/g, '$1 ').replace(/(^\s+|\s+$)/,'')
                td(data-th=`Coluna ${column}`)=random
                - column++
            - row++
    if (attributes.datatable)
      .footer
        .bottom-bar
          .items
            span Exibir:
            +select("").is-small(id=attributes.id + '-items')
              +option("10", "10")
              +option("15", "15")
              +option("20", "20")
            span.divider
            span 1-10 de 50 itens
          .pagination
            .selectors
              +select("").is-small(id=attributes.id + '-pagination')
                +option("1", "1")
                +option("2", "2")
                +option("3", "3")
              span de 3 páginas
              span.divider
            .arrows
              +button()(circle secondary)
                i.fa.fa-chevron-left
              +button()(circle secondary)
                i.fa.fa-chevron-right

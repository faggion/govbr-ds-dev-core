mixin tag
  .br-tag&attributes(attributes)
    .content
      if block
        block
    if attributes.class == "tag-input-close"
      .close
        button(type='button')
          +icon.fa-times
          span.sr-only Fechar

mixin tag-button
  button.br-tag&attributes(attributes)(type='button')
    if block
      block

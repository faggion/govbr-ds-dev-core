mixin footer
  .br-footer&attributes(attributes)
    if block
      block

mixin footer-list-filler(attributes)
  - total = attributes.total ?  attributes.total : 6
  - col = typeof(attributes.col) === 'number' ? 'col-' + attributes.col : 'col'
  - let n = 1;

  while n <= total
    - let itens = Math.floor(Math.random() * (1 - 4) + 4)
    div(class = col)
      +list-item()(link)
        if (n % 2 == 0)
          .content= 'Categoria '+ n
        else
          .content= 'Categoria '+ n
        .support: i.fas.fa-angle-up
      +list
        - let i = 0;
        while i <= itens
          - let div = Math.floor(Math.random() * (1 - 4) + 4)
          +list-item()(link)
            if ( i % div == 0)
              .content= 'Item da Lista '
            else if ( i % div == 1)
              .content= 'Item da Lista ' + ' -  teste teste testestes testeste teste testeteste testeteste teste teste testetesteteste teste teste teste teste'
            else
              .content= 'Item da Lista ' + ' -  teste teste teste testeteste teste '
          - i++
    - n++


      button(class="wizard-progress-btn" type="button" title="Cadastrar Senha")
        span.color-info Cadastrar Senha
      button(class="wizard-progress-btn" type="button" title="Finalizar Cadastro")
        span.color-info Finalizar
      if ( total > 5 )
        - let n = 6;
        while n <= total
          button(class="wizard-progress-btn" type="button" title="Passo "+ n )
            span.info= 'Passo ' + n
          - n++

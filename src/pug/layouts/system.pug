                    li.item
                      a(href='') Serviço de Informação ao Cidadão
        .container
          // Links rápidos
          .nav-quicklinks
          // Logout
          .nav-logout
            .nav-timeout
            .nav-buttontimeout
          // Links úteis e redes sociais
          .row
            // Links úteis
            // Redes sociais
    .flex-fill
      // Sombra do topo
      div
        .container-fluid
          // Barra de sistema
          .row.system-bar
            // Breadcrumbs
            .col
              ul.br-breadcrumb
                li.home
                  a(href='')
                    span.sr-only Página inicial
                    i.fas.fa-home
                li
                  a(href='') Tela anterior
                li.is-active
                  a(href='') Tela atual
            // Timeout
            .col-auto
              .timeout
                i.fas.fa-clock
                span.session Sessão:
                span.timer 00 min. e 00 seg
      hr.my-0
      // Conteúdo principal
      main#content.page-content
        .container-fluid
          block message
          block title
            h1.main-title #{title}
          block content
  // Rodapé de governo
  footer#footer.page-footer
    .chancela-serpro
      img(src='https://cdn.dsgovserprodesign.estaleiro.serpro.gov.br/design-system/images/produto-serpro.png' alt='Produto Serpro')

extends ../../layouts/component

append vars
  - var title = "Divisor";

append content
  p(style="font-size:1.6em;font-weight:600;color:#1351B4;") Separador para ser utilizado com fundo positivo
  div(style="width:100%;margin:auto;padding:1em;")
    +divider
  p(style="font-size:1.6em;font-weight:600;color:#1351B4;") Separador para ser utilizado com fundo negativo
  div(style='background-color:#071d41;height:100px;width:400px;margin:1em;padding: 0.5em;')
    +divider
    div(style="display:flex;align-items:center;")
      div(style='color:#fff;font-weight:900;font-size:1.2em;margin-left:1.5em') ASSUNTO
      div(style="display:flex;width:100%;justify-content:end;padding-right:1em;margin-right:1em;font-size:1.5em;color:#fff;")
        i.fas.fa-angle-down
    +divider
  p(style="font-size:1.6em;font-weight:600;color:#1351B4;") Separador para ser utilizado com fundo neutro  
  div(style='background-color:#ccc;height:100px; width:400px;margin:1em;padding:0.5em;')
    +divider(class="fundo-neutro")
    div(style="display:flex;align-items:center;")
      div(style='color:#555;font-weight:900;font-size:1.2em;margin-left:1.5em') ASSUNTO
      div(style="display:flex;width:100%;justify-content:end;padding-right:1em;margin-right:1em;font-size:1.5em;color:#1351B4;")
          i.fas.fa-angle-down
    +divider(class="fundo-neutro")
    
extends ../../layouts/component

append vars
  - var title = "Checkbox";

append content
  .description
    p.title-checkbox Checkbox Horizontal Padrão (Titulo opcional).
    p.auxiliary.text Texto auxiliar(opcional).
  .list-options
    +checkbox("Padrão")(class="pb-5 pr-5 ml-3 d-inline-block" id="h-checkbox-default")
    +checkbox("Checado")(class="pb-5 pr-5 ml-3 d-inline-block" id="h-checkbox-checked" checked)
    +checkbox("Inválido")(class="pb-5 pr-5 ml-3 d-inline-block" id="h-checkbox-invalid" class="is-invalid")
      +feedback("fa-times-circle", "Preenchimento Obrigatório")(class="is-invalid p-0")
    +checkbox("Válido")(class="pb-5 pr-5 ml-3 d-inline-block" id="h-checkbox-valid" class="is-valid" checked)
      +feedback("fa-check-circle", "Campo Correto")(class="is-valid p-0")
    +checkbox("Desativado")(class="ml-3 pb-5 pr-5 d-inline-block" id="h-checkbox-disabled" disabled)
  hr
  .row
    .col-sm-4.pb-5.pr-5
      .description
        p.title-checkbox Checkbox Vertical Padrão (Título opcional).
        p.auxiliary.text Texto auxiliar(opcional).
      .list-options
        +checkbox("Padrão")(id="v-checkbox-default")
        +checkbox("Checado")(id="v-checkbox-checked" checked)
        +checkbox("Inválido")(id="v-checkbox-invalid" class="is-invalid")
          +feedback("fa-times-circle", "Preenchimento Obrigatório")(class="is-invalid p-0")
        +checkbox("Válido")(id="v-checkbox-valid" class="is-valid" checked)
          +feedback("fa-check-circle", "Campo Correto")(class="is-valid p-0")
        +checkbox("Desativado")(id="v-checkbox-disabled" class="d-block" disabled)
    .col-sm-4.pb-5.pr-5
      .description
        p.title-checkbox Checkbox Pequeno (Título opcional).
        p.auxiliary.text Texto auxiliar(opcional).
      .list-options
        +checkbox("Padrão")(id="v-s-checkbox-default" class="is-small")
        +checkbox("Checado")(id="v-s-checkbox-checked" class="is-small" checked)
        +checkbox("Inválido")(id="v-s-checkbox-invalid" class="is-small is-invalid")
          +feedback("fa-times-circle", "Preenchimento Obrigatório")(class="is-invalid p-0")
        +checkbox("Válido")(id="v-s-checkbox-valid" class="is-small is-valid" checked)
          +feedback("fa-check-circle", "Campo Correto")(class="is-valid p-0")
        +checkbox("Desativado")(id="v-s-checkbox-disabled" class="is-small" disabled)
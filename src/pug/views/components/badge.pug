extends ../../layouts/component

append vars
  - var title = "Badge";

append content
  p.h5 Sinalização de status
  .row
    .col-auto
      +badge()(bottom danger aria-label="atenção informação importante")
        .icon
        .content: +icon.fa-user-tie.fa-2x.text-primary-default
    .col-auto
      +badge()(bottom success aria-label="informação de sucesso no procedimento")
        .icon
        .content: +icon.fa-user-tie.fa-2x.text-primary-default
    .col-auto
      .d-inline-flex.align-items-center
        +badge()(success aria-label="informação de sucesso no procedimento")
          .icon
          .content
            +avatar
              .image: img(src="https://picsum.photos/id/823/400" alt="Avatar")

  p.h5.mt-5 Sinalização de status com símbolo
  .row
    .col-auto
      +badge()(bottom warning)
        .content: i.fas.fa-file.fa-2x
        .icon: i.fas.fa-exclamation-triangle(aria-label="atenção verificar a informação")
    .col-auto
      +badge().ml-3(bottom success)
        .icon: i.fas.fa-check(aria-label="Informação de status ok ")
        .content: i.fas.fa-plane-departure.fa-2x

  p.h5.mt-5 Contagem
  .row
    .col-auto
      +badge()(danger)
        .icon 5
        .content: +icon.fa-car.fa-2x
    .col-auto
      +badge()(bottom danger aria-label="Badge com contador")
        .icon 5
        .content: +icon.fa-car.fa-2x
    .col-auto
      .d-inline-flex.align-items-center
        +badge()(danger aria-label="Badge com contador")
          .icon 5
          .content
            +avatar
              .image: img(src="https://picsum.photos/id/823/400" alt="Avatar")
    .col-auto
      +badge()(danger aria-label="Badge com contador")
        .content: i.fas.fa-envelope.fa-2x
        .icon 999+

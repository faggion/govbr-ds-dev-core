extends ../../layouts/component

append vars
  - var title = "Badge";

append content
  p.h5 Sinalização de status
  .row
    .col-auto
      +badge()(bottom danger)
        .icon
        .content: +icon.fa-user-tie.fa-2x.text-primary-default
    .col-auto
      +badge()(bottom success)
        .icon
        .content: +icon.fa-user-tie.fa-2x.text-primary-default
    .col-auto
      .d-inline-flex.align-items-center
        +badge()(success)
          .icon
          .content
            +avatar
              .image: img(src="https://picsum.photos/id/823/400" alt="Avatar")

  p.h5.mt-5 Sinalização de status com símbolo
  .row
    .col-auto
      +badge()(bottom warning)
        .content: +icon.fa-file.fa-2x
        .icon: +icon.fa-exclamation-triangle
    .col-auto
      +badge().ml-3(bottom success)
        .icon: +icon.fa-check
        .content: +icon.fa-plane-departure.fa-2x

  p.h5.mt-5 Contagem
  .row
    .col-auto
      +badge()(danger)
        .icon 5
        .content: +icon.fa-car.fa-2x
    .col-auto
      +badge()(bottom danger)
        .icon 5
        .content: +icon.fa-car.fa-2x
    .col-auto
      .d-inline-flex.align-items-center
        +badge()(danger)
          .icon 5
          .content
            +avatar
              .image: img(src="https://picsum.photos/id/823/400" alt="Avatar")
    .col-auto
      +badge()(danger)
        .content: +icon.fa-envelope.fa-2x
        .icon 999+

extends ../../layouts/component

append vars
  - var title = "Scrim";

append content
  .br-scrim.is-foco
    .br-modal.is-medium
      .br-modal-dialog
        .br-modal-content
          .br-modal-header
            h1.br-modal-title Scrim com Foco
          .br-modal-body
            p Exemplo utilizando o componente scrim com FOCO
          .br-modal-footer.justify-content-end
            button.br-button.is-secondary.is-mini.ml-3.mr-3(type='button')
              | Cancelar
            button.br-button.is-primary.is-mini.ml-3.mr-3(type='button')
              | Retornar
  h2 Scrim - Foco
  .bloco1
    button.br-button.is-primary(type='button') Testar Efeito
  .row
    .col-6
      h2 Scrim - Legibilidade
      .br-scrim.is-legibilidade
        .bloco2
          .scrim-text(text-white='') Scrim - Legibilidade
  h2 Scrim - SEM Inibição (Clicável) e COM Inibição(Não Clicável)
  .row
    .col-6
      p SEM Scrim Inibição(a área do elemento é Clicável)
      .bloco3(onclick="alert('Exemplo scrim sem inibição(Área Clicável)')")
    .col-6
      p COM Scrim Inibição(a área do elemento torna-se desativada)
      .br-scrim.is-inibicao
         .bloco3
append style
  style.
    .bloco1 {
      margin-bottom: 50px;
      width: 50%;
      height: 200px;
      display: block;
      color: black;
      box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.2);
      background-size: cover;
      background-image: url("./assets/design-system/docs/components/scrim/imagens/agricultura.jpeg");
      box-sizing: border-box;
      border: solid 1px black;
      text-align: right;
      padding: 20px;
    }
    .bloco2 {
      margin-bottom: 50px;
      width: 100%;
      height: 200px;
      font-size: 20px;
      color: white;
      display: block;
      background-size: cover;
      background-image: url("./assets/design-system/docs/components/scrim/imagens/agricultura.jpeg");
      box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.2);
      border: solid 1px black;
      text-align: left;
      padding: 20px 0;
      line-height: 1.5;
    }
    .bloco3:not(is-inibicao){
      cursor: pointer;
    }
    .bloco3{
      width: 100%;
      height: 200px;
      font-size: 20px;
      color: black;
      padding: 10px 0;
      box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.2);
      background-size: cover;
      background-image:url("/assets/design-system/docs/components/scrim/imagens/agricultura.jpeg");
      border: solid 1px black;
      text-align: center;
      vertical-align: center;
    }

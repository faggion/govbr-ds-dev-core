extends ../../layouts/component

append vars
  - var title = "Avatar";

append style
  style.
    .card {
      box-shadow: 0 3px 6px rgba(var(--rgb-secondary-09), 0.16);
      border-radius: 4px;
    }
    .card-3 .is-tertiary {
      margin: 0;
      min-width: 0;
      padding: 8px;
    }

append content
  .row
    .col-md
      p.h2 Avatar estático
      .br-avatar.small
        .image: i.fas.fa-user
      .br-avatar.medium
        .image: i.fas.fa-user
      .br-avatar.large
        .image: i.fas.fa-user
      .br-avatar.small
        .image: img(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3/Harry-Potter-1-.jpg" alt="")
      .br-avatar.medium
        .image: img(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3/Harry-Potter-1-.jpg" alt="")
      .br-avatar.large
        .image: img(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3/Harry-Potter-1-.jpg" alt="")

      p.h2 Com Badge
      .br-avatar.small
        +badge("fa-layers-counter fa-layers-top-left") 5
        .image: i.fas.fa-user
      .br-avatar.medium
        +badge("fa-layers-counter fa-layers-top-left") 5
        .image: i.fas.fa-user
      .br-avatar.large
        +badge("fa-layers-counter fa-layers-top-left") 5
        .image: i.fas.fa-user
      .br-avatar.small
        +badge("fa-layers-counter fa-layers-top-left") 5
        .image: img(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3/Harry-Potter-1-.jpg" alt="")
      .br-avatar.medium
        +badge("fa-layers-counter fa-layers-top-left") 5
        .image: img(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3/Harry-Potter-1-.jpg" alt="")
      .br-avatar.large
        +badge("fa-layers-counter fa-layers-top-left") 5
        .image: img(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3/Harry-Potter-1-.jpg" alt="")

      p.h2 Com menu
      .br-avatar.small
        .image: i.fas.fa-user
        button.menu(type="button")
          .icon: i.fas.fa-angle-down
      .br-avatar.medium
        .image: i.fas.fa-user
        button.menu(type="button")
          .icon: i.fas.fa-angle-down
      .br-avatar.large
        .image: i.fas.fa-user
        button.menu(type="button")
          .icon: i.fas.fa-angle-down
      .br-avatar.small
        .image: img(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3/Harry-Potter-1-.jpg" alt="")
        button.menu(type="button")
          .icon: i.fas.fa-angle-down
      .br-avatar.medium
        .image: img(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3/Harry-Potter-1-.jpg" alt="")
        button.menu(type="button")
          .icon: i.fas.fa-angle-down
      .br-avatar.large
        .image: img(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3/Harry-Potter-1-.jpg" alt="")
        button.menu(type="button")
          .icon: i.fas.fa-angle-down

      p.h2
        | Alteração de foto
        |
        small (hover/focus)
      .br-avatar.small
        button.change(type="button")
          .image: i.fas.fa-user
          .icon: i.fas.fa-camera
      .br-avatar.medium
        button.change(type="button")
          .image: i.fas.fa-user
          .icon: i.fas.fa-camera
      .br-avatar.large

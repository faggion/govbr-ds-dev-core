          i.fas.fa-chevron-circle-up
  .mb-3.mb-sm-0.d-sm-inline
      +button
          | Avançar
          i.fas.fa-angle-right

  p.mt-3 Ícone
  +button()(circle)
      i.fas.fa-envelope
  +button()(circle)
      i.fas.fa-phone
  +button()(circle)
      i.fas.fa-chevron-down
  +button()(circle)
      i.fas.fa-plus

  p.mt-3 ìcone mini

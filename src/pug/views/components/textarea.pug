extends ../../layouts/component

append vars
  - var title = "Textarea";

append content
  .row
    .col-md-4
      +textarea("Digite sua mensagem aqui")(id="textarea-id1" placeholder="Exemplo de textarea simples" rows=5 cols=5)
    .col-md-4
      +textarea("Digite sua mensagem aqui")(id="textarea-id2" placeholder="Exemplo de textarea simples" rows=5 cols=5)
      p.help Texto auxiliar ao preenchimento, tem a função de previnir erros.
  .row
    .col-md-4
      +textarea("Digite sua mensagem aqui")(id="textarea-id3" placeholder="Exemplo de textarea válido" rows=5 cols=5 valid)
      .feedback.color-success
        i.fas.fa-check-circle
        span Campo correto
    .col-md-4
      +textarea("Digite sua mensagem aqui")(id="textarea-id4" placeholder="Exemplo de textarea válido" rows=5 cols=5 valid)
      .feedback.color-success
        i.fas.fa-check-circle
        span Campo correto
      p.help Texto auxiliar ao preenchimento, tem a função de previnir erros.
  .row
    .col-md-4
      +textarea("Digite sua mensagem aqui")(id="textarea-id5" placeholder="Exemplo de textarea inválido" rows=5 cols=5 invalid)
      .feedback.color-danger
        i.fas.fa-times-circle
        span Campo inválido
    .col-md-4
      +textarea("Digite sua mensagem aqui")(id="textarea-id6" placeholder="Exemplo de textarea inválido" rows=5 cols=5 invalid)
      .feedback.color-danger
        i.fas.fa-times-circle
        span Campo inválido
      p.help Texto auxiliar ao preenchimento, tem a função de previnir erros.
  .row
    .col-md-4
      +textarea("Digite sua mensagem aqui")(id="textarea-id7" placeholder="Exemplo de textarea desabilitado" rows=5 cols=5 disabled)
      .feedback
        i.fas.fa-exclamation-triangle
        span Campo Desabilitado
    .col-md-4
      +textarea("Digite sua mensagem aqui")(id="textarea-id8" placeholder="Exemplo de textarea desabilitado" rows=5 cols=5 disabled)
      .feedback
        i.fas.fa-exclamation-triangle
        span Campo Desabilitado
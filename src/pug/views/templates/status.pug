          .col: div.background-color-primary-default.color-secondary-01 Auto
          .col: div.background-color-primary-default.color-secondary-01 Auto
          .col: div.background-color-primary-default.color-secondary-01 Auto
          .col: div.background-color-primary-default.color-secondary-01 Auto
          .col: div.background-color-primary-default.color-secondary-01 Auto
          .col: div.background-color-primary-default.color-secondary-01 Auto
          .col: div.background-color-primary-default.color-secondary-01 Auto
          .col: div.background-color-primary-default.color-secondary-01 Auto
          .col: div.background-color-primary-default.color-secondary-01 Auto

        - i = 1
        while i <= 4
          .row
            .col(class=`portrait-${i}`)
              .background-color-primary-default.color-secondary-01=`Portrait ${i}`
          - i++

        - i = 1
        while i <= 8
          .row
            .col(class=`tablet-${i}`)

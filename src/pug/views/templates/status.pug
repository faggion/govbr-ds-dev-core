extends ../../layouts/default

mixin colors-tokens(values)
    each value in values
      tr(style="vertical-align: top;")
        td(style="text-align: right;")=`--color-${value}: `
        td
          div.border-color-secondary-04(
            class=`background-color-${value}`,
            style="border: 1px solid; height: 1em; width: 2em;"
          )

mixin icons-tokens(values)
    each value in values
      tr(style="vertical-align: top;")
        td(style="text-align: right;")=`--icon-size-${value}: `
        td
          i.fas.fa-camera-retro(class=`icon-size-${value}`)

mixin grid-breakpoint(item, value)
  tr(style="vertical-align: top;")
    td(style="text-align: right;")=`--grid-${item}: `
    td
      span=value

mixin font-weights(values)
    each value in values
      tr(style="vertical-align: top;")
        td(style="text-align: right;")=`--font-weight-${value}: `
        td
          span(class=`font-weight-${value}`) Peso da fonte

mixin font-sizes(values)
    each value in values
      tr(style="vertical-align: top;")
        td(style="text-align: right;")=`--font-size-scale-${value}: `
        td
          span(class=`font-size-scale-${value}`) Tamanho da fonte

mixin line-heights(values)
    each value in values
      tr(style="vertical-align: top;")
        td(style="text-align: right;")=`--font-line-height-${value}: `
        td
          span.bg-color-secondary-04(class=`font-line-height-${value}`)
            | Line height
            br
            | Line height
            br
            | Line height

append vars
  - var title = "Estados"
  - var values = []
  - let i = 0;

append template
  .background-color-secondary-03
    .container
      .background-color-secondary-01
        h1 Tokens

        h2.h3 Cores
        table
          - values = ['primary-pastel-01', 'primary-pastel-02', 'primary-lighten-01', 'primary-lighten-02', 'primary-default', 'primary-darken-01', 'primary-darken-02']
          +colors-tokens(values)
          - values = ['secondary-01', 'secondary-02', 'secondary-03', 'secondary-04', 'secondary-05', 'secondary-06', 'secondary-07', 'secondary-08']
          +colors-tokens(values)
          - values = ['highlight']
          +colors-tokens(values)
          - values = ['warning', 'success', 'danger', 'info']
          +colors-tokens(values)
          - values = ['support-01', 'support-02', 'support-03', 'support-04']

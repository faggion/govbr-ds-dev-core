          - i++

        - i = 1
        while i <= 12
          .row
            .col(class=`desktop-${i}`)
              .background-color-primary-default.color-secondary-01=`Desktop ${i}`
          - i++

        - i = 1
        while i <= 12
          .row
            .col(class=`tv-${i}`)
              .background-color-primary-default.color-secondary-01=`TV ${i}`
          - i++

        h2.h3 Tipografia
        table
          - values = ['thin', 'extra-light', 'light', 'regular', 'medium', 'semi-bold', 'bold', 'extra-bold', 'black']

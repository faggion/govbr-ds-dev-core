extends ../../partial/pug/component

append core-css
  link(rel="stylesheet" href="https://govbr-ds.gitlab.io/prototipos/mvp-cores/css/tokens.css")

append vars
  - var title = "Utilit√°rio de Cores";

mixin exemplos(color, ...iterations)
  p.h4.mt-5.text-capitalize=color
  each key in iterations
    div
      .p-1.d-inline-block.m-1(class=`bg-${color}-${key}`)=`bg-${color}-${key}`
      .p-1.d-inline-block.m-1.border-solid-sm(class=`border-${color}-${key}`)=`border-${color}-${key}`
      .p-1.d-inline-block.m-1(class=`text-${color}-${key}`)=`text-${color}-${key}`

mixin states(...colors)
  each color in colors
    div
      .p-1.d-inline-block.m-1(class=`bg-${color}`)=`bg-${color}`
      .p-1.d-inline-block.m-1.border-solid-sm(class=`border-${color}`)=`border-${color}`
      .p-1.d-inline-block.m-1(class=`text-${color}`)=`text-${color}`

mixin theme(...colors)
  each color in colors
    div
      .p-1.d-inline-block.m-1.border-solid-sm(class=`bg-${color}`)=`bg-${color}`
      .p-1.d-inline-block.m-1.border-solid-sm(class=`text-${color}`)=`text-${color}`

mixin apply-color(...colors)
  each color in colors
    case color
      when 'pure': +exemplos(color, 100, 0)
      when 'gray': +exemplos(color, 90, 80, 70, 60, 50, 40, 20, 10, 5, 4, 3, 2, 1)
      when 'gray-cool': +exemplos(color, 90, 80, 70, 60, 50, 40, 20, 10, 5, 4, 3, 2, 1)
      when 'gray-warm': +exemplos(color, 90, 80, 70, 60, 50, 40, 20, 10, 5, 4, 3, 2, 1)
      default: +exemplos(color, 90, 80, 70, 60, 50, 40, 20, 10, 5)

append content
  p.h4.mt-5 Tema
  +theme('main-base', 'main-alternative', 'contrast-base', 'contrast-alternative')
  .p-1.d-inline-block.m-1.border-solid-sm(class=`border-color-base`)=`border-base`
  .p-1.d-inline-block.m-1.border-solid-sm(class=`border-color-alternative`)=`border-alternative`

  p.h4.mt-5 Interativo
  +states('interactive-main', 'interactive-contrast', 'interactive-cta')

  p.h4.mt-5 Estados
  +states('success', 'alert', 'error')

  +apply-color('pure')
  +apply-color('gray', 'gray-cool', 'gray-warm')
  +apply-color('blue', 'blue-vivid', 'blue-cool', 'blue-warm', 'blue-cool-vivid', 'blue-warm-vivid')
  +apply-color('cyan', 'cyan-vivid')
  +apply-color('gold', 'gold-vivid')
  +apply-color('green', 'green-vivid', 'green-cool', 'green-warm', 'green-cool-vivid', 'green-warm-vivid')
  +apply-color('indigo', 'indigo-vivid', 'indigo-cool', 'indigo-warm', 'indigo-cool-vivid', 'indigo-warm-vivid')
  +apply-color('magenta', 'magenta-vivid')
  +apply-color('mint', 'mint-vivid', 'mint-cool', 'mint-cool-vivid')
  +apply-color('orange', 'orange-vivid', 'orange-warm', 'orange-warm-vivid')
  +apply-color('red', 'red-vivid', 'red-cool', 'red-warm', 'red-cool-vivid', 'red-warm-vivid')
  +apply-color('violet', 'violet-vivid', 'violet-warm', 'violet-warm-vivid')
  +apply-color('yellow', 'yellow-vivid')

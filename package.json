{
	"name": "@govbr/dsgov",
	"version": "1.2.3-beta.26",
	"description": "Design System do governo",
	"main": "index.js",
	"cdn": "https://cdn.dsgovserprodesign.estaleiro.serpro.gov.br/design-system/latest/",
	"scripts": {
		"start": "npm-run-all build:webpack:dev & webpack-dev-server --env dev",
		"build-local": "npm-run-all build:webpack:dev & webpack-dev-server --env prod",
		"build": "npm-run-all build:webpack:prod && npm run homologacao:build ",
		"test": "npm-run-all validate:*",
		"init": "npm run repo:serpro & npm run repo:govbr && npm install",
		"repo:serpro": "npm set @serpro:registry=http://nexus.aic.serpro/repository/npm-private/",
		"repo:govbr": "npm set @govbr:registry=http://nexus.aic.serpro/repository/npm-private/",
		"validate:html": "node_modules/.bin/html-validate dist/**/*.html",
		"validate:styles": "node_modules/.bin/stylelint src/scss/**/*.scss",
		"build:webpack:dev": "webpack --env dev --progress --profile --colors",
		"build:webpack:prod": "webpack --env prod",
		"cypress:terminal": "npx cypress run",
		"cypress:interface": "npx cypress open",
		"homologacao:build": "webpack --config webpack.proddev.js",
		"compile-sass": "node componentes.js && node-sass -r ./dist/scss/temp/ -o ./dist/css/components --output-style=expanded "
	},
	"engines": {
		"node": ">= 12.16.1"
	},
	"engineStrict": true,
	"author": "",
	"browserslist": [
		"last 2 version",
		"> 5% in BR"
	],
	"license": "ISC",
	"dependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/polyfill": "^7.8.7",
		"@fortawesome/fontawesome-free": "^5.12.1",
		"@popperjs/core": "^2.1.1",
		"babel": "^6.23.0",
		"bootstrap": "^4.4.1",
		"css-loader": "^3.4.2",
		"file-loader": "^5.1.0",
		"js-datepicker": "5.4.0",
		"mini-css-extract-plugin": "^0.9.0",
		"postcss-calc": "^7.0.2",
		"postcss-loader": "^3.0.0",
		"pug-client": "^1.0.2",
		"pug-html-loader": "^1.1.5",
		"random-string": "^0.2.0",
		"style-loader": "^1.1.3",
		"trash-cli": "^3.0.0",
		"url-loader": "^3.0.0"
	},
	"devDependencies": {

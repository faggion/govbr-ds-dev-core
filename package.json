{
  "name": "@govbr/dsgov",
  "version": "1.5.0-rc.4",
  "description": "Design System do Governo Federal",
  "keywords": [
    "dsgov",
    "componentes",
    "design",
    "system"
  ],
  "homepage": "https://git.serpro/dsgov/dsgov-dsgov/-/blob/develop/README.md",
  "bugs": "https://git.serpro/dsgov/dsgov-backlogs/-/issues",
  "repository": "https://git.serpro/dsgov/dsgov-dsgov",
  "license": "ISC",
  "author": "SERPRO/DIDES/SUPSE/SESEP",
  "main": "/dist/js/dsgov.js",
  "scripts": {
    "build": "npm-run-all minify:img build:webpack:prod build:hom",
    "build:hom": "webpack --config webpack.proddev.js",
    "build:local": "npm-run-all build:webpack:dev & webpack-dev-server --env prod",
    "build:webpack:dev": "webpack --env dev --progress --profile --colors",
    "build:webpack:prod": "webpack --env prod",
    "commit": "npx commit-lint",
    "lint": "npm-run-all lint:*",
    "lint:branch": "npx branch-lint",
    "lint:html": "./node_modules/.bin/html-validate dist/**/*.html",
    "lint:js": "standard \"src/js/**/*.js\" --fix",
    "lint:styles": "./node_modules/.bin/stylelint src/scss/**/*.scss",
    "minify:img": "node minify-img.js",
    "create:assets": "node ./createassets.js",
    "pushtags": "git push origin $(git describe --tags $(git rev-list --tags --max-count=1))",
    "release": "standard-version && npm run pushtags ",
    "release:rc": "standard-version --prerelease rc && npm run pushtags ",
    "start": "npm-run-all build:webpack:dev & webpack-dev-server --env dev"
  },
  "standard-version": {
    "scripts": {
      "postbump": "npm publish && npm run create:assets && git add . && git commit -am 'criar release'"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "cz-customizable": {
      "config": "./node_modules/@govbr/dsgov-gitlint/gitlint.config.js"
    }
  },
  "browserslist": [
    "> 5% in BR",
    "cover 99.5% in BR",
    "last 5 versions",
    "Firefox ESR",
    "not dead",
    "IE 9-11"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@popperjs/core": "^2.4.4",
    "bootstrap": "^4.5.2",
    "flatpickr": "^4.6.3",
    "jquery": "^1.9.1",
    "js-datepicker": "^5.16.0",
    "standard-version": "^8.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@commitlint/cli": "^11.0.0",
    "@govbr/dsgov-gitlint": "*",
    "autoprefixer": "^9.8.6",
    "babel-loader": "8.1.0",
    "chalk": "4.1.0",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^4.2.2",
    "dir-archiver": "^1.1.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^6.1.0",
    "html-validate": "^3.2.0",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.2.5",
    "imagemin": "^7.0.1",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-pngquant": "^9.0.0",
    "mini-css-extract-plugin": "^0.11.0",
    "multi-entry-loader": "^1.1.2",
    "node-sass": "4.14.1",
    "node-wget": "^0.4.3",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "prettier": "^2.1.1",
    "prettier-config-standard": "^1.0.1",
    "pug": "3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "pug-loader": "^2.4.0",
    "sass-loader": "8.0.2",
    "standard": "^14.3.4",
    "standard-version": "^9.0.0",
    "style-loader": "1.2.1",
    "stylelint": "^13.7.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0",
    "terser": "^5.3.0",
    "uglifyjs-folder": "^2.0.0",
    "uglifyjs-webpack-plugin": "2.2.0",
    "unminified-webpack-plugin": "2.0.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-concat-plugin": "3.0.0",
    "webpack-dev-server": "3.11.0",
    "webpack-shell-plugin": "^0.5.0",
    "webpack-shell-plugin-next": "^1.1.9"
  },
  "engines": {
    "node": ">= 12.16.3"
  },
  "engineStrict": true
}

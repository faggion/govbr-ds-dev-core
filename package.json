{
  "name": "componentes.gov.br",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "zip:components": "for i in components/*/; do zip -r ${i%/}.zip $i assets/styles; done",
    "zip:all-components": "zip -r components/all-components.zip components assets/styles",
    "zip:templates": "for i in templates/*/; do zip -r ${i%/}.zip $i assets/styles; done",
    "zip:all-templates": "zip -r templates/all-templates.zip templates assets/styles",
    "zip:all": "npm-run-all zip:clear zip:all-components zip:components zip:all-templates zip:templates",
    "zip:clear": "rm -rf components/*.zip && rm -rf templates/*.zip",
    "build": "npm-run-all compile zip:all",
    "compile": "npm-run-all compile-*",
    "compile-css": "node-sass -r ./src/scss/ -o ./dist/css",
    "compile-pug": "pug ./src/pug/views/ -o ./dist -P",
    "start": "npm-run-all watch",
    "test": "npm-run-all validate:* ",
    "validate:html": "node_modules/.bin/html-validate dist/**/*.html",
    "validate:sass": "node_modules/.bin/sass-lint -c .sass-lint.yml -v -q",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css": "node-sass -w -r ./src/scss/ -o ./dist/css",
    "watch-pug": "pug -w ./src/pug/views/ -o ./dist -P"
  },
  "author": "",
  "browserslist": [
    "last 2 version",
    "> 5% in BR"
  ],
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.10.1",
    "bootstrap": "^4.3.1"
  },
  "devDependencies": {
    "@serpro-design/ds-validate": "0.0.3",
    "autoprefixer": "^9.6.1",
    "clean-css-cli": "^4.3.0",
    "gulp": "^4.0.2",
    "gulp-decompress": "^2.0.2",
    "gulp-download-files": "0.0.3",
    "gulp-download-stream": "0.0.19",
    "gulp-header": "^2.0.9",
    "gulp-rename": "^1.4.0",
    "gulp-strip-css-comments": "^2.0.0",
    "html-validate": "^1.1.0",
    "husky": "^3.0.7",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "postcss-between": "^1.0.2",
    "postcss-cli": "^6.1.3",
    "postcss-sorting": "^5.0.1",
    "pug": "^2.0.4",
    "sass-lint": "^1.13.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test"
    }
  }
}

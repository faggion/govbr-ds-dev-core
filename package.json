		"copy-webpack-plugin": "^5.1.1",
		"extract-loader": "^5.0.1",
		"extract-text-webpack-plugin": "^3.0.2",
		"gulp": "^4.0.2",
		"gulp-decompress": "^3.0.0",
		"gulp-download-files": "0.0.3",
		"gulp-download-stream": "0.0.19",
		"gulp-header": "^2.0.9",

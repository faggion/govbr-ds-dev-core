{
  "name": "componentes.gov.br",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "zip-components": "for i in components/*/; do zip -r ${i%/}.zip $i base; done",
    "zip-all-components": "zip -r components/all-components.zip components base",
    "zip-templates": "for i in templates/*/; do zip -r ${i%/}.zip $i base; done",
    "zip-all-templates": "zip -r templates/all-templates.zip templates base",
    "zip-all": "npm-run-all clear-zips zip-all-components zip-components zip-all-templates zip-templates",
    "clear-zips": "rm -rf components/*.zip && rm -rf templates/*.zip && rm -rf base.zip ",
    "build": "npm-run-all get-tokens css",
    "css": "npm-run-all css-compile css-prefix css-minify",
    "css-compile": "npm-run-all --parallel css-compile-*",
    "css-compile-assets": "node-sass --output-style expanded -r assets/styles -o assets/styles",
    "css-compile-base": "node-sass --output-style expanded assets/styles/dsgov-base.scss assets/styles/dsgov-base.css",
    "css-compile-components": "node-sass --output-style expanded -r components -o components",
    "css-compile-templates": "node-sass --output-style expanded -r templates -o templates",
    "css-minify": "npm-run-all --parallel css-minify-*",
    "css-minify-base": "cleancss --level 1 --format breaksWith=lf --source-map --source-map-inline-sources --output assets/styles/dsgov-base.min.css assets/styles/dsgov-base.css",
    "css-minify-components": "cleancss --level 1 --format breaksWith=lf --source-map --source-map-inline-sources --output assets/styles/dsgov-components.min.css assets/styles/dsgov-components.css",
    "css-minify-templates": "cleancss --level 1 --format breaksWith=lf --source-map --source-map-inline-sources --output assets/styles/dsgov-templates.min.css assets/styles/dsgov-templates.css",
    "css-prefix": "npm-run-all --parallel css-prefix-*",
    "css-prefix-assets": "postcss -r \"assets/styles/*.css\" \"!assets/styles/*.min.css\" -m",
    "css-prefix-base": "postcss -r \"assets/styles/dsgov-base.css\" -m",
    "css-prefix-components": "postcss -r \"components/**/*.css\" -m",
    "css-prefix-templates": "postcss -r \"templates/**/*.css\" -m",
    "get-tokens": "gulp styles",
    "start": "npm-run-all watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "validate:html": "node_modules/.bin/html-validate components/**/*.html",
    "validate:sass": "node_modules/.bin/sass-lint -c .sass-lint.yml -v -q",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-assets": "nodemon --watch assets/styles/ --ext scss --exec \"npm run css-compile-assets && npm run css-prefix-assets && npm run css-minify\"",
    "watch-css-base": "nodemon --watch base/ --ext scss --exec \"npm run css-compile-base && npm run css-prefix-base && npm run css-minify\"",
    "watch-css-components": "nodemon --watch components/ --ext scss --exec \"npm run css-compile-components && npm run css-prefix-components && npm run css-compile-assets && npm run css-prefix-assets && npm run css-minify\"",
    "watch-css-templates": "nodemon --watch templates/ --ext scss --exec \"npm run css-compile-templates && npm run css-prefix-templates && npm run css-compile-assets && npm run css-prefix-assets && npm run css-minify\""
  },
  "author": "",
  "browserslist": [
    "last 2 version",
    "> 5% in BR"
  ],
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.10.1",
    "bootstrap": "^4.3.1",
    "raleway-webfont": "^3.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "clean-css-cli": "^4.3.0",
    "gulp": "^4.0.2",
    "gulp-download-stream": "0.0.19",
    "gulp-header": "^2.0.9",
    "gulp-strip-css-comments": "^2.0.0",
    "html-validate": "^1.1.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "postcss-between": "^1.0.2",
    "postcss-cli": "^6.1.3",
    "postcss-sorting": "^5.0.1",
    "sass-lint": "^1.13.1"
  }
}

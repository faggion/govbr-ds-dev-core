{
    "name": "componentes.gov.br",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "zip:components": "for i in components/*/; do zip -r ${i%/}.zip $i assets/styles; done",
        "zip:all-components": "zip -r components/all-components.zip components assets/styles",
        "zip:templates": "for i in templates/*/; do zip -r ${i%/}.zip $i assets/styles; done",
        "zip:all-templates": "zip -r templates/all-templates.zip templates assets/styles",
        "zip:all": "npm-run-all zip:clear zip:all-components zip:components zip:all-templates zip:templates",
        "zip:clear": "rm -rf components/*.zip && rm -rf templates/*.zip",
        "build": "npm-run-all get-tokens css zip:all",
        "css": "npm-run-all css-compile css-prefix css-minify",
        "css-assets": "npm-run-all css-compile-assets css-prefix css-minify",
        "css-compile": "npm-run-all --parallel css-compile-*",
        "css-compile-assets": "node-sass --output-style expanded -r assets/styles -o assets/styles",
        "css-compile-base": "node-sass --output-style expanded assets/styles/dsgov-base.scss assets/styles/dsgov-base.css",
        "css-compile-components": "node-sass --source-map true --output-style expanded -r components -o components",
        "css-compile-templates": "node-sass --output-style expanded -r templates -o templates",
        "css-minify": "npm-run-all --parallel css-minify-*",
        "css-minify-base": "cleancss --level 1 --format breaksWith=lf --output assets/styles/dsgov-base.min.css assets/styles/dsgov-base.css",
        "css-minify-components": "cleancss --level 1 --format breaksWith=lf --output assets/styles/dsgov-components.min.css assets/styles/dsgov-components.css",
        "css-minify-templates": "cleancss --level 1 --format breaksWith=lf --output assets/styles/dsgov-templates.min.css assets/styles/dsgov-templates.css",
        "css-prefix": "npm-run-all --parallel css-prefix-*",
        "css-prefix-assets": "postcss --no-map -r \"assets/styles/*.css\" \"!assets/styles/*.min.css\"",
        "get-tokens": "gulp styles",
        "start": "npm-run-all watch",
        "test": "npm-run-all validate:* ",
        "validate:html": "node_modules/.bin/html-validate components/**/*.html",
        "validate:sass": "node_modules/.bin/sass-lint -c .sass-lint.yml -v -q",
        "validate:rules": "./node_modules/ds-validate/bin/ds-validate.js components/**/*.html",
        "watch": "npm-run-all --parallel watch-*",
        "watch-css-assets": "nodemon --watch assets/styles/ --ext scss --exec \"npm run css-assets\"",
        "watch-css-base": "nodemon --watch base/ --ext scss --exec \"npm run css-compile-base && npm run css-assets\"",
        "watch-css-components": "nodemon --watch components/ --ext scss --exec \"npm run css-compile-components && npm run css-assets\"",
        "watch-css-templates": "nodemon --watch templates/ --ext scss --exec \"npm run css-compile-templates && npm run css-assets\""
    },
    "author": "",
    "browserslist": [
        "last 2 version",
        "> 5% in BR"
    ],
    "license": "ISC",
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.10.1",
        "bootstrap": "^4.3.1",
        "ds-validate": "0.0.2",
        "husky": "^3.0.7"
    },
    "devDependencies": {
        "autoprefixer": "^9.6.1",
        "clean-css-cli": "^4.3.0",
        "gulp": "^4.0.2",
        "gulp-decompress": "^2.0.2",
        "gulp-download-files": "0.0.3",
        "gulp-download-stream": "0.0.19",
        "gulp-header": "^2.0.9",
        "gulp-rename": "^1.4.0",
        "gulp-strip-css-comments": "^2.0.0",
        "html-validate": "^1.1.0",
        "node-sass": "^4.12.0",
        "nodemon": "^1.19.1",
        "npm-run-all": "^4.1.5",
        "postcss-between": "^1.0.2",
        "postcss-cli": "^6.1.3",
        "postcss-sorting": "^5.0.1",
        "sass-lint": "^1.13.1"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run test"
        }
    }
}
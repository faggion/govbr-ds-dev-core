{
  "name": "@govbr/dsgov",
  "version": "1.4.0-beta.0",
  "description": "Design System do Governo Federal",
  "author": "SERPRO",
  "keywords": [
    "dsgov",
    "componentes",
    "design",
    "system"
  ],
  "repository": {
    "type": "git",
    "url": "https://git.serpro/dsgov/dsgov-dsgov"
  },
  "license": "ISC",
  "main": "/dist/js/dsgov.js",
  "scripts": {
    "build": "npm-run-all minify:img build:webpack:prod build:hom",
    "build:hom": "webpack --config webpack.proddev.js",
    "build:local": "npm-run-all build:webpack:dev & webpack-dev-server --env prod",
    "build:sass": "node componentes.js && node-sass -r ./dist/scss/temp/ -o ./dist/css/components --output-style=expanded",
    "build:webpack:dev": "webpack --env dev --progress --profile --colors",
    "build:webpack:prod": "webpack --env prod",
    "commit": "npx commit-lint",
    "init": "npm run repo:serpro & npm run repo:govbr && npm install",
    "lint": "npm-run-all lint:*",
    "lint:branch": "npx branch-lint",
    "lint:html": "./node_modules/.bin/html-validate dist/**/*.html",
    "lint:js": "./node_modules/.bin/eslint \"src/js/**/*.js\" --fix",
    "lint:styles": "./node_modules/.bin/stylelint src/scss/**/*.scss",
    "minicomponents": "./node_modules/.bin/babel src/js/components --out-dir dist",
    "minify:img": "node minify-img.js",
    "minjscomp": "uglifyjs-folder ./dist/js/components ",
    "release": "standard-version",
    "release:alpha": "standard-version -t '' --prerelease alpha",
    "release:beta": "standard-version -t '' --prerelease beta",
    "release:rc": "standard-version -t '' --prerelease rc",
    "repo:govbr": "npm set @govbr:registry=http://nexus.aic.serpro/repository/npm-private/",
    "repo:serpro": "npm set @serpro:registry=http://nexus.aic.serpro/repository/npm-private/",
    "start": "npm-run-all build:webpack:dev & webpack-dev-server --env dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "cz-customizable": {
      "config": "./node_modules/@govbr/dsgov-gitlint/gitlint.config.js"
    }
  },
  "browserslist": [
    "last 5 version",
    "> 5% in BR"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.13.1",
    "@popperjs/core": "^2.4.3",
    "bootstrap": "4.5.0",
    "js-datepicker": "5.14.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@govbr/dsgov-gitlint": "0.0.4",
    "autoprefixer": "9.8.4",
    "babel-loader": "8.1.0",
    "chalk": "4.1.0",
    "clean-webpack-plugin": "3.0.0",
    "commitizen": "^4.1.2",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "3.6.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-html": "6.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "6.0.0",
    "html-validate": "3.0.0",
    "html-webpack-plugin": "4.3.0",
    "husky": "^4.2.5",
    "imagemin": "^7.0.1",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-pngquant": "^9.0.0",
    "mini-css-extract-plugin": "0.9.0",
    "multi-entry-loader": "^1.1.2",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "npx": "^10.2.2",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "postcss-between": "1.0.4",
    "postcss-sorting": "5.0.1",
    "prettier": "2.0.5",
    "prettier-config-standard": "^1.0.1",
    "pug": "3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "pug-loader": "^2.4.0",
    "sass-loader": "8.0.2",
    "standard-version": "^8.0.0",
    "style-loader": "1.2.1",
    "stylelint": "13.6.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0",
    "terser": "^4.8.0",
    "uglifyjs-folder": "^1.5.4",
    "uglifyjs-webpack-plugin": "2.2.0",
    "unminified-webpack-plugin": "2.0.0",
    "webpack": "4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-concat-plugin": "3.0.0",
    "webpack-dev-server": "3.11.0",
    "webpack-shell-plugin": "0.5.0",
    "webpack-shell-plugin-next": "^1.1.9"
  },
  "engines": {
    "node": ">= 12.16.3"
  },
  "engineStrict": true
}

{
	"name": "@govbr/dsgov",
	"version": "1.2.2-beta5",
	"description": "Design System do governo",
	"cdn": "https://cdn.dsgovserprodesign.estaleiro.serpro.gov.br/design-system/1.2.3-beta.3/",
	"main": "index.js",
	"scripts": {
		"build": "npm-run-all build:webpack:prod compile",
		"compile": "npm-run-all  compile-*",
		"compile-sass": "node-sass -r ./src/scss/ -o ./dist/css",
		"compile-pug": "pug ./src/pug/views/ -O '{\"version\": \"1.2.2\",\"cdnUrl\": \"'$npm_package_cdn'\"}' -o ./dist -P",
		"start": "npm-run-all build watch",
		"test": "npm run build && npm-run-all validate:* ",
		"validate:html": "node_modules/.bin/html-validate dist/**/*.html",
		"validate:styles": "node_modules/.bin/stylelint src/scss/**/*.scss",
		"watch": "npm-run-all --parallel watch-* & npm run watch-webpack",
		"watch-sass": "node-sass -w -r --source-map true ./src/scss/ -o ./dist/css ",
		"watch-pug": "pug -w ./src/pug/views/ -O '{\"version\": \"1.2.2\",\"cdnUrl\": \"../\"}' -o ./dist -P",
		"watch-webpack": "webpack --mode development",
		"build:webpack:dev": "webpack --mode development",
		"build:webpack:prod": "webpack --mode production"
	},
	"engines": {
		"node": ">= 12.13.1"
	},
	"engineStrict": true,
	"author": "",
	"browserslist": [
		"last 2 version",
		"> 5% in BR"
	],
	"license": "ISC",
	"dependencies": {
		"@fortawesome/fontawesome-free": "^5.12.0",
		"bootstrap": "^4.4.1",
		"css-loader": "^3.4.2",
		"file-loader": "^5.0.2",
		"mini-css-extract-plugin": "^0.9.0",
		"postcss-loader": "^3.0.0",
		"pug-client": "^1.0.2",
		"random-string": "^0.2.0",
		"style-loader": "^1.1.3",
		"trash-cli": "^3.0.0",
		"url-loader": "^3.0.0",
		"webpack-cli": "^3.3.10"
	},
	"devDependencies": {
		"@govbr/ds-validate": "0.0.2",
		"autoprefixer": "^9.7.4",
		"babel-cli": "^6.26.0",
		"clean-css-cli": "^4.3.0",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^5.1.1",
		"gulp": "^4.0.2",
		"gulp-decompress": "^3.0.0",
		"gulp-download-files": "0.0.3",
		"gulp-download-stream": "0.0.19",
		"gulp-header": "^2.0.9",
		"gulp-rename": "^2.0.0",
		"gulp-strip-css-comments": "^2.0.0",
		"html-validate": "^2.13.0",
		"husky": "^4.2.1",
		"node-sass": "^4.13.1",
		"nodemon": "^2.0.2",
		"npm-run-all": "^4.1.5",
		"postcss-between": "^1.0.4",
		"postcss-cli": "^7.1.0",
		"postcss-sorting": "^5.0.1",
		"pug": "^2.0.4",
		"pug-cli": "^1.0.0-alpha6",
		"sass-loader": "^8.0.2",
		"stylelint": "^13.0.0",
		"stylelint-config-recommended-scss": "^4.2.0",
		"stylelint-scss": "^3.14.2",
		"webpack": "^4.41.5",
		"webpack-concat-plugin": "^3.0.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm test",
			"pre-push": "npm test"
		}
	}
}

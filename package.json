{
  "name": "@govbr/dsgov",
  "version": "1.2.2",
  "description": "Design System do governo",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all build:webpack:prod compile",
    "compile": "npm-run-all compile-*",
    "compile-sass": "node-sass -r ./src/scss/ -o ./dist/css",
    "compile-pug": "pug ./src/pug/views/  -o ./dist -P",
    "start": "npm-run-all build watch",
    "test": "npm-run-all validate:* ",
    "validate:html": "node_modules/.bin/html-validate dist/**/*.html",
    "validate:styles": "node_modules/.bin/stylelint src/scss/**/*.scss",
    "watch": "npm-run-all --parallel watch-* & npm run watch-webpack",
    "watch-sass": "node-sass -w -r --source-map true ./src/scss/ -o ./dist/css ",
    "watch-pug": "pug -w ./src/pug/views/ -o ./dist -P",
    "watch-webpack": "webpack --mode development",
    "build:webpack:dev": "webpack --mode development",
    "build:webpack:prod": "webpack --mode production",
    "delcomp": "rm -rf dist"
  },
  "engines": {
    "node": ">= 12.13.1"
  },
  "engineStrict": true,
  "author": "",
  "browserslist": [
    "last 2 version",
    "> 5% in BR"
  ],
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.10.1",
    "babel": "^6.23.0",
    "bootstrap": "^4.3.1",
    "css-loader": "^3.2.1",
    "file-loader": "^5.0.2",
    "mini-css-extract-plugin": "^0.8.0",
    "postcss-loader": "^3.0.0",
    "pug-client": "^1.1.0-alpha.1",
    "random-string": "^0.2.0",
    "style-loader": "^1.0.1",
    "trash-cli": "^3.0.0",
    "url-loader": "^3.0.0",
    "webpack-cli": "^3.3.10"
  },
  "devDependencies": {
    "@serpro-design/ds-validate": "0.0.3",
    "autoprefixer": "^9.6.1",
    "babel-cli": "^6.26.0",
    "clean-css-cli": "^4.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.5",
    "gulp": "^4.0.2",
    "gulp-decompress": "^2.0.2",
    "gulp-download-files": "0.0.3",
    "gulp-download-stream": "0.0.19",
    "gulp-header": "^2.0.9",
    "gulp-rename": "^1.4.0",
    "gulp-strip-css-comments": "^2.0.0",
    "html-validate": "^2.2.0",
    "husky": "^3.1.0",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-between": "^1.0.4",
    "postcss-cli": "^6.1.3",
    "postcss-sorting": "^5.0.1",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "sass-loader": "^8.0.0",
    "stylelint": "^12.0.1",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-scss": "^3.13.0",
    "webpack": "^4.41.4",
    "webpack-concat-plugin": "^3.0.0"
  },
